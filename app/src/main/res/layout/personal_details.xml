<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
     android:id="@+id/name"
     android:padding="@dimen/padding"
     android:orientation="vertical"
     android:layout_height="84dp"
     android:layout_width="match_parent"
     android:background="#EEFF">
     <TextView
         android:id="@+id/user_name_text"
         android:layout_height="32dp"
         android:layout_width="match_parent"
         android:text="name"
         android:textSize="24sp"
         android:textStyle="normal"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_below="@+id/user_name_text"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:text="name"
        android:textSize="28sp"
        android:textStyle="bold"/>
 </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/name"
        android:id="@+id/rollNo"
        android:padding="@dimen/padding"
        android:orientation="vertical"
        android:layout_height="84dp"
        android:layout_width="match_parent"
        android:background="#EEFF">
        <TextView
            android:id="@+id/user_rollNo_text"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:text="RollNo"
            android:textSize="24sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/user_rollNo"
            android:layout_below="@+id/user_name_text"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:text="123456"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/rollNo"
        android:id="@+id/email"
        android:padding="@dimen/padding"
        android:orientation="vertical"
        android:layout_height="84dp"
        android:layout_width="match_parent"
        android:background="#EEFF">
        <TextView
            android:id="@+id/user_email_text"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:text="Email"
            android:textSize="24sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/user_email"
            android:layout_below="@+id/user_name_text"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:text="name@gmail.com"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/email"
        android:id="@+id/Class"
        android:padding="@dimen/padding"
        android:orientation="vertical"
        android:layout_height="84dp"
        android:layout_width="match_parent"
        android:background="#EEFF">
        <TextView
            android:id="@+id/user_class_text"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:text="Class"
            android:textSize="24sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/user_class"
            android:layout_below="@+id/user_class_text"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:text="TECH I C"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>



