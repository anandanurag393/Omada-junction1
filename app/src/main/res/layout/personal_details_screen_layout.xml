<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background = "#EEEEEE"
        >

        <TextView
            android:id = "@+id/more_username_textview"
            android:text = "Hello User"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin = "10dp"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/name"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/user_name_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="name"/>
        <EditText
            android:id="@+id/user_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="name" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/name"
        android:id="@+id/rollNo"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/user_rollNo_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="RollNo" />
        <EditText
            android:id="@+id/user_rollNo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/rollNo"
        android:id="@+id/email"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/user_email_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="Email"/>
        <EditText
            android:id="@+id/user_email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="name@gmail.com"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/email"
        android:id="@+id/Class"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/user_class_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart = "10dp"
            android:text="Class"/>
        <EditText
            android:id="@+id/user_class"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:text="TECH I C"/>
    </LinearLayout>
</LinearLayout>



